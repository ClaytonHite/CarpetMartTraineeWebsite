@model List<WebsiteProjectCarpetMart.ViewModels.ClassViewModel>
@{
    ViewData["Title"] = "Class List";
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        table {
            border-collapse: separate;
            border-spacing: 50px 0;
        }

        td {
            padding: 10px 0;
        }
    </style>
</head>
<body>
@{
    if (Model.Count == 0)
    {
        <link rel="stylesheet" href="style.css">
        <h1 class="pageheader">There aren't any classes yet!</h1>
        <div class="form-group">
        <div class="row-col-1">
        <a href="/Class/AddClass" class="btn btn-primary">Add Class</a>
        </div>
        </div>
    }
    else
    {
            <h2>Upcoming Classes</h2>
            <br />
            <br />
            <div style="overflow-x: auto;">
                <table>
                    <tr>
                        <th> Class Name </th>
                        <th> Start Date </th>
                        <th> End Date </th>
                        <th> Start Time </th>
                        <th> End Time </th>
                        <th> Information </th>
                        <th> Host </th>
                        <th> Address </th>
                    </tr>
                    @foreach (var element in Model)
                    {
                        <tr>
                            <td>@element.ClassName</td>
                            <td>@element.ClassStartDate</td>
                            <td>@element.ClassEndDate</td>
                            <td>@element.ClassStartTime</td>
                            <td>@element.ClassEndTime</td>
                            <td>@element.ClassInformation</td>
                            <td>@element.ClassHost</td>
                            <td>@element.ClassAddress</td>
                            <td>
                                <form method="POST" action="@Url.Action("RegisterForClass","Class")">
                                    <input type="hidden" value="@element.ClassName" name="className" class="btn btn-primary" />
                                    <button type="submit" class="btn btn-primary">Register</button>
                                </form>
                            </td>
                            <td>
                                <form method="POST" action="@Url.Action("ViewRegisteredTraineesByClass","Class")">
                                    <input type="hidden" value="@element.ClassName" name="className" class="btn btn-primary" />
                                    <button type="submit" class="btn btn-primary">View Students</button>
                                </form>
                            </td>
                        </tr>
                    }
                </table>
                <a href="/Class/AddClass" class="btn btn-primary">Add Class</a>
            </div>
    }
}
</body>
</html>