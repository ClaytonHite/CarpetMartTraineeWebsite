@model WebsiteProjectCarpetMart.ViewModels.WeatherViewModel
@{
    ViewData["Title"] = "Weather";
}
<h1>Please enter a city in the united states to get the weather.</h1>

<div class="container border" style="padding:25px">
	<form asp-action="Weather">
		<div class="text-danger"></div>
		<div class="form-group row">
			<div class="col-1">
				<label asp-for="Name" class="control-label"></label>
			</div>
			<div class="col-2">
				<input type="Name" asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-1">
				<input type="submit" class="btn btn-primary" value="Weather" />
			</div>
		</div>
	</form>
</div>
@{
}